#hero{
	background-image:linear-gradient(rgb(218,51,45,0.6),rgb(218,51,45,0.6)),url("../images/heroimage.jpg");
	background-attachment:fixed;
	background-position:center;
	background-repeat:no-repeat;
	background-size:cover;
	/*height:100vh;*/
	padding:40px 0 70px;
	overflow-y:hidden;
	height:850px;
}

.logo a{display:table;
		clear:both;
		width:100%;
}

.nav li{display:inline-block;
		margin-left:10px;
}

.nav li a{font-size:16px;
		  color:#fff;
		  text-transform:uppercase;
		  text-decoration:none;	
		  padding:10px;
		  display:inline-block;
}
.nav li:last-child a{padding-right:0;
}
.cta-info h2{font-size:52px;
		  color:#fff;
		  text-transform:uppercase;
		  margin:150px 0 60px;
}
.cta-info p{font-size:36px;
		  color:#fff;
		  margin-bottom:50px;
		  line-height:41px;
}
.cta-info a{/*margin-bottom:65px;*/
			padding:15px 50px 15px 35px;
			background-color:#282828;
			border-radius:50px;
			color:#fff;
			font-size:18px;
			text-transform:uppercase;
			cursor:pointer;
			transition:content'';
}
.cta-info i{padding-right:30px;
}
.cta-img img{
	margin-top:130px;			 
}
#features{
	padding:90px 0 110px;
}
.features-info h1{color:#8a8a8a;
             font-size:52px;
			 text-transform:uppercase;
			 text-align:center;
			 margin-bottom:45px;
}
.features-info p{color:#3a3a3a;
             font-size:22px;
			 text-align:center;
			  margin-bottom:65px;
}
.info h1{font-size:24px;
		 text-transform:uppercase;
		 margin:35px 0 45px;
}
.info p{font-size:18px;
		color:#646464;
		line-height:22px;
}
.choco{
	   background-color:#d6dddb;
}

.choco-info h2{font-size:52px;
			  text-transform:uppercase;
			  margin:200px 0 50px;
			  color:#fff;
}	
.choco-info p{font-size:24px;
			  color:#d9332d;
			  margin-bottom:70px;
			  line-height:35px;
}
.choco button{margin-bottom:145px;
			  color:#fff;
			 padding:20px 35px;
			 background-color:#d9332d;
			 font-size:16px;
			 text-transform:uppercase;
			 border-radius:30px;
			 border:1px solid #d9332d;
			 margin-left:10px;
			 font-weight:strong;
}
.choco-img img{margin-left:calc(200% / 12);
}
.para{width:calc(700% / 12);
}
.word{
	color:#f55150;
}

.footer{padding:122px 0 150px;
		background-color:#2e2e38;
}
.footer img{margin-bottom:65px;
}

.thumb-box{
	width:55px;
	height:40px;
	background-color:#e74c3c;
	display:inline-block;
	text-align:left;
	margin-right:15px;
}
.thumb-info{
	font-size:18px;
	color:#cececf;
}
	

.footer ul li{display:inline-block;
}
.head{margin-bottom:30px;
		  font-size:20px;
		  color:#cececf;
}

.foot h1{margin:135px 0 35px;
		  font-size:20px;
		  color:#cececf;
}
.foot h2{margin-bottom:15px;
		  font-size:14px;
		  color:#cececf;
}
.foot p{margin-bottom:30px;
		  font-size:11px;
		  color:#cececf;
}
.foot h3{margin-bottom:40px;
		  font-size:15px;
		  color:#cececf;
}
.foot h4{font-weight:strong;
		  font-size:14px;
		  color:#cececf;
}

.foot2 h1{margin:135px 0 35px;
		  font-size:20px;
		  color:#cececf;
}
.foot2 p{
		  font-size:15px;
		  color:#cececf;
		  line-height:25px;
}
.sub-footer{padding:35px 0;
			background-color:#d7dedc;
			text-align:center;
}
.sub-footer ul li{display:inline-block;
				  font-size:24px;
}
.sub-footer ul li img{vertical-align:middle;
}

.line{
	margin:0 40px;
}
.m-40{margin:0 40px;
}